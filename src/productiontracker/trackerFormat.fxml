<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" styleClass="pane" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="productiontracker.Controller">
    <children>
        <TabPane prefHeight="600.0" prefWidth="550.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab styleClass="tab" text="Product Line">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="productLineBtn" layoutX="233.0" layoutY="212.0" mnemonicParsing="false" onAction="#addProd" text="Add Product" />
                                <Label fx:id="warningLbl" layoutX="247.0" layoutY="51.0" textFill="#f51f1f" />
                                <GridPane fx:id="plineGrid" layoutX="127.0" layoutY="51.0" prefHeight="147.0" prefWidth="295.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Manufacturer" GridPane.rowIndex="1" />
                                        <TextField fx:id="productNameTxt" promptText="Enter Product Name" GridPane.columnIndex="1" />
                                        <Label text="Product Name" />
                                        <TextField fx:id="manufacturerTxt" prefHeight="25.0" prefWidth="121.0" promptText="Enter Manufacturer " GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Item Type" GridPane.rowIndex="2" />
                                        <ChoiceBox fx:id="itemTypeChb" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    </children>
                                </GridPane>
                                <Label layoutX="229.0" layoutY="276.0" text="Existing Products" />
                                <TableView fx:id="productTable" layoutX="99.0" layoutY="315.0" prefHeight="200.0" prefWidth="351.0">
                                    <columns>
                                        <TableColumn fx:id="prodNameCol" prefWidth="105.99999237060547" text="Product Name" />
                                        <TableColumn fx:id="manCol" prefWidth="128.00001525878906" text="Manufacturer" />
                                        <TableColumn fx:id="itemTypeCol" prefWidth="118.66668701171875" text="Item Type" />
                                    </columns>
                                </TableView>
                                <Button fx:id="logoutBtn1" layoutX="484.0" layoutY="532.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab styleClass="tab" text="Produce">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="31.0" layoutY="43.0" text="Choose Product" />
                                <ListView fx:id="prodList" layoutX="31.0" layoutY="60.0" prefHeight="269.0" prefWidth="269.0" />
                                <Label layoutX="339.0" layoutY="43.0" text="Choose Quantity" />
                                <ComboBox fx:id="chQntCb" layoutX="308.0" layoutY="60.0" prefWidth="150.0" />
                                <Button fx:id="recProdBtn" layoutX="325.0" layoutY="134.0" mnemonicParsing="false" text="Record Production" />
                                <Button fx:id="logoutBtn2" layoutX="482.0" layoutY="532.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab styleClass="tab" text="Production Log">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextArea fx:id="productionLog" layoutX="6.0" layoutY="14.0" prefHeight="408.0" prefWidth="537.0" />
                                <Button fx:id="logoutBtn3" layoutX="482.0" layoutY="532.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
</GridPane>
