<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TabPane prefHeight="600.0" prefWidth="550.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Product Line">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="productLineBtn" layoutX="234.0" layoutY="200.0" mnemonicParsing="false" onAction="#addProd" text="Add Product" />
                        <GridPane layoutX="151.0" layoutY="77.0" prefHeight="123.0" prefWidth="247.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label fx:id="manufacturerLbl" text="Manufacturer" GridPane.rowIndex="1" />
                              <TextField fx:id="productNameTxt" promptText="Enter Product Name" GridPane.columnIndex="1" />
                              <Label fx:id="productNameLbl" text="Product Name" />
                              <TextField fx:id="manufacturerTxt" prefHeight="25.0" prefWidth="121.0" promptText="Enter Manufacturer " GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label fx:id="itemTypeLbl" text="Item Type" GridPane.rowIndex="2" />
                              <ChoiceBox fx:id="itemTypeChb" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                        <Label layoutX="72.0" layoutY="266.0" text="Existing Products" />
                        <TableView layoutX="175.0" layoutY="266.0" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Produce">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="chProdLbl" layoutX="31.0" layoutY="43.0" text="Choose Product" />
                        <ListView fx:id="chProdLV" layoutX="31.0" layoutY="60.0" prefHeight="200.0" prefWidth="200.0" />
                        <Label fx:id="chQntLbl" layoutX="339.0" layoutY="43.0" text="Choose Quantity" />
                        <ComboBox fx:id="chQntCb" layoutX="308.0" layoutY="60.0" prefWidth="150.0" />
                        <Button fx:id="recProdBtn" layoutX="325.0" layoutY="134.0" mnemonicParsing="false" onAction="#recProd" text="Record Production" />
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab text="Production Log">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea layoutX="175.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0" />
                     </children></AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
